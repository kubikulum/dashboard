datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                 String         @id @default(cuid())
  createdAt          DateTime       @default(now())
  updatedAt          DateTime       @updatedAt
  firstName          String?
  email              String?        @unique
  roles              Json
  organization       String?
  lastName           String?
  organizations      Organization[] @relation(name: "members")
  ownerOrganizations Organization[] @relation(name: "owner")
  username           String         @unique
  password           String?
}

model Organization {
  id                       String    @id @default(cuid())
  createdAt                DateTime  @default(now())
  updatedAt                DateTime  @updatedAt
  name                     String
  members                  User[]    @relation(name: "members")
  owner                    User?     @relation(name: "owner", fields: [ownerId], references: [id])
  ownerId                  String?
  clusters                 Cluster[]
  gardenerProjectNamespace String?   @unique
}

model Cluster {
  id             String                 @id @default(cuid())
  createdAt      DateTime               @default(now())
  updatedAt      DateTime               @updatedAt
  clusterType    EnumClusterClusterType
  organization   Organization?          @relation(fields: [organizationId], references: [id])
  organizationId String?
}

enum EnumClusterClusterType {
  kubeflow
  flyte
}
